{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEWS_API_KEY": "@news-api-key",
    "GNEWS_API_KEY": "@gnews-api-key",
    "TRADING_ECONOMICS_API_KEY": "@trading-economics-api-key",
    "EXCHANGE_RATE_API_KEY": "@exchange-rate-api-key",
    "PYTHON_FORECAST_SERVICE_URL": "@python-forecast-service-url"
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  }
}
